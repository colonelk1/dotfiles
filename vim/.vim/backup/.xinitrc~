if [ -d /etc/X11/xinit/xinitrc.d ] ; then
 for f in /etc/X11/xinit/xinitrc.d/?*. ; do
  [ -x "$f" ] && . "$f"
 done
 unset f
fi

xrdb ~/.Xresources &
xbanish &
nitrogen --restore
compton --config ~/.config/compton/compton.conf -b &
xset r rate 150 25 &
xmodmap ~/.Xmodmap &
setxkbmap us -variant colemak -option ctrl:nocaps &
xbindkeys &
caffeine &
udiskie -N -s &
dunst &
mpd &
xcape -t 150 &
keynav &
#cadence-session-start -s
#qjackctl &

exec i3
